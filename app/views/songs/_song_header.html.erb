<div class="row-fluid">
  <div class="span12">
    <div class="header">
      <div class="row-fluid">
        <div class="span1">
          <%= link_to image_tag("logo-small.png"), root_path %>
        </div>

        <div class="span8">
          <% if current_user and current_user.owns?(@song) %>
            <span>These are <%= link_to "#{@user.username.possessive}", account_path %> notes on <strong><%= @song.title.titleize %></strong> by <strong><%= @song.artist.titleize %></strong>.</span>
          <% else %>
          <span>These are <%= link_to "#{@user.username.possessive}", user_path(@user) %> notes on <strong><%= @song.title.titleize %></strong> by <strong><%= @song.artist.titleize %></strong>.</span>
          <% end %>
        </div>

        <%= render "shared/toolbar" %>
      </div>
    </div>
  </div>
</div>
