
<% title @user.display_name  %>

<%= render "profile_header" %>

<div class="row-fluid">
  <div class="span6 offset1 account-header">
    <h2>recent songs</h2>
  </div>

  <div class="span3 offset1 notes profile">
    <div class="bordered">
      <h2><%= @user.display_name %></h2>

      <% if current_user != @user %>
        <% if current_user.follows?(@user) %>
          <%= link_to "Unfollow", relationship_path(@user), :class => "button", :method => :delete %>
        <% else %>
          <%= link_to "Follow", relationships_path(:followed_id => @user.id), :class => "button button-primary", :method => :post %>
        <% end %>
      <% end %>

      <p class="profile-followers">
        <strong><%= @user.followers.count %></strong> Followers<br/>
        <strong><%= @user.followed_users.count %></strong> Following
      </p>

      <% if @user.twitter.present? %>
        <p class="big">
          <i class="icon-twitter"></i>
          <%= link_to "@#{@user.twitter}", "http://twitter.com/#{@user.twitter}" %>
        </p>
      <% end %>

      <% if @user.website.present? %>
        <p class="big">
          <i class="icon-home"></i>
          <%= link_to @user.website, "http://#{@user.website}" %>
        </p>
      <% end %>

      <p>
        <%= @user.bio %>
      </p>
    </div>
  </div>

</div>

<div class="row-fluid">
  <div class="span8 song-list profile-song-list">
    <% @user.recent_songs_by_date.each do |date, songs| %>
      <div class="row-fluid row-jump">
        <div class="span1 centered">
          <span class="date"><%= date.strftime("%b. %d").downcase %></span>
        </div>

        <div class="span8 bordered">
          <% songs.each do |song| %>
            <p>

              <%= link_to(user_song_path(@user, song), :class => "song song-dropdown") do %>
                <%= song.name %>
                <i class="icon-arrow-right"></i>
              <% end %>
            </p>
          <% end %>
        </div>
      </div>
    <% end %>
  </div>
</div>

