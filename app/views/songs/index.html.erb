<% title @user.display_name  %>

<%= render "profile_header" %>

<div class="row-fluid">
  <div class="span6 offset1 account-header">
    <h2>recent songs</h2>
    <%= render "shared/notices" %>
  </div>
</div>

<div class="row-fluid">
  <div class="span8 song-list profile-content">
    <% @user.recent_songs_by_date.each do |date, songs| %>
      <div class="row-fluid row-jump">
        <div class="span1 centered" >
          <span class="date"><%= date.strftime("%b. %d").downcase %></span>
        </div>

        <div class="span10 bordered">
          <% songs.each do |song| %>
            <p>

              <%= link_to(user_song_path(@user, song), :class => "song song-dropdown") do %>
                <%= truncate(song.name, :length => 55).html_safe %>
                <i class="icon-arrow-right"></i>
              <% end %>
            </p>
          <% end %>
        </div>
      </div>
    <% end %>
  </div>
  <%= render "shared/profile_sidebar" %>
</div>

