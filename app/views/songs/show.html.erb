<% title @song.name %>

<%= render "song_header" %>

<div class="container">
  <div class="row">
    <div class="span6 lyric">
      <p>
        <%= @song.body %>
      </p>
    </div>

    <div class="span3 offset1 notes">
      <%= @song.embed %>
      <% @song.sidenotes.each do |note| %>
        <p><%= note %></p>
      <% end %>
    </div>
  </div>
</div>

<div class="lyric-extra">
  <%= image_tag "cherry-icon.png" %>
  <p>
    Share this song:<br/>
    <strong><%= link_to user_song_url(@user.username, @song) %></strong>
  </p>

  <% if @user.sample_songs.present? %>

  <%= image_tag "s-icon.png" %>
  <p>
    Check out <%= link_to @user.username, user_path(@user) %> notes on:<br/>
    <% @user.sample_songs.each do |song| %>
      <%= link_to song.name, user_song_path(@user.username, song) %><br/>
    <% end %>

  </p>
<% end %>
</div>
