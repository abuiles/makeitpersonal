<% title "your profile" %>

<%= render "user_header" %>

<div class="row-fluid">
  <div class="span6 offset1 account-header">
    <h2>songs</h2>
    <%= render "shared/notices" %>
    <% if current_user.songs.present? %>
      <% if current_user.blank_profile? %>
        <p>
          <em>(psst, remember to <%= link_to "complete your profile", edit_user_registration_path %> so others can reach you!)</em>
        </p>
      <% end %>
    <% else %>
      <p>
        You don't seem to have any songs yet, feel like <%= link_to "creating your first one?", new_song_path %>
      </p>
    <% end %>
  </div>
</div>

<div class="row-fluid">
  <div class="span8 song-list">
    <% current_user.timeline_songs.each do |date, songs| %>
      <div class="row-fluid row-jump">
        <div class="span1 centered">
          <span class="date"><%= date.strftime("%b. %d").downcase %></span>
        </div>

        <div class="span10 bordered">
          <% songs.each do |song| %>
            <p><%= render song %></p>
          <% end %>
        </div>
      </div>
    <% end %>
  </div>
  <div class="span3 bordered profile">
    <h2>actions</h2>
    <h3><%= link_to "Create new song", new_song_path %></h3>
    <h3><%= link_to "View your profile", user_path(current_user) %></h3>
    <h3><%= link_to "Account information", edit_user_registration_path %></h3>
  </div>

</div>

