<h1>Share a song</h1>

<%= form_for @lyric, :url => fetch_lyrics_path, :remote => true, :method => :get do |f| %>
  <div class="wrap">
    <div class="field">
      <%= f.label :artist %>
      <%= f.text_field :artist %>
    </div>

    <div class="field">
      <%= f.label :title, "Song Title" %>
      <%= f.text_field :title %>
    </div>

    <div class="field hidden">
      <%= f.label :text, "Lyrics" %>
      <%= f.text_area :text %>
    </div>

    <%= f.submit "Fetch lyrics", :class => "btn" %>

    <div class="actions hidden">
      <%= f.submit "Save song", :class => "btn" %>
    </div>
  </div>
<% end %>
