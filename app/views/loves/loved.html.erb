<% title "loved songs" %>

<%= render "users/user_header" %>

<div class="row-fluid">
  <div class="span6 offset1 content-heading">
    <h2>loved songs</h2>
    <p>These are the songs you have loved.</p>
    <%= render "shared/notices" %>
  </div>
</div>

<div class="row-fluid">
  <div class="span8 song-list">
    <div class="row-fluid">
      <div class="span10 offset1 bordered">
        <p>
          <% @songs.each do |song| %>
            <%= render song %>
          <% end %>
        </p>
      </div>
    </div>

  </div>

  <%= render "users/user_sidebar" %>
</div>

