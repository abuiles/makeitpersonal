<div class="background">
  <div class="fader">&nbsp;</div>
  <%= image_for_band @lyric.record.artist  %>
</div>

<div class="content">
  <h1><%= @lyric.title %></h1>

  <div class="video">
    <%= @lyric.embed %>
  </div>

  <div class="info">
    <h2>Posted by <a href="http://twitter.com/<%= @lyric.user.username %>"><%= @lyric.user.username %></a>, <%= time_ago_in_words(@lyric.created_at) %> ago.
  </div>
</div>

<div class="lyrics">
  <%= @lyric.lyrics %>
</div>
